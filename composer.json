{
    "require": {
        "wikimedia/composer-merge-plugin": "dev-master",
        "artyomderyavka/fast-micro-kernel": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Monolith\\Controllers\\" : "Controllers/",
            "Monolith\\Components\\" : "Components/"
        }
    },
    "classmap": [
        "Controllers",
        "Components"
    ],
    "extra": {
        "merge-plugin": {
            "include": [
                "services/*/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "ignore-duplicates": false,
            "merge-dev": true,
            "merge-extra": false,
            "merge-extra-deep": false,
            "merge-scripts": false
        }
    }
}
